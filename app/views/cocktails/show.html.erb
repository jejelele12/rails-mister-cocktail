<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<h2><%=@cocktail.name%></h2>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%=dose.description%> <%= dose.ingredient.name %>
    <%=link_to 'delete', dose_path(dose), method: :delete, data: { confirm: "are you sure" } %>
    </li>
  <% end %>
</ul>

 <p><%=link_to 'back to main cocktail list', cocktails_path%></p>

